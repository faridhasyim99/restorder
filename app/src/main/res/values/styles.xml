<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="styleEditText" parent="TextRegularSizeRegular">
        <item name="android:background">@drawable/style_app_edittext</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextRegularSizeRegular">

        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="navText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/opensansregular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="RatingBarNew" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>
</resources>
